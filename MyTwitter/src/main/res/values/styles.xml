<resources>

    <style name="AppTheme" parent="Theme.HoloAccent.Light">
        <!-- Customize your theme here. -->
        <!-- Accent Colors -->
        <item name="accentColor">#ff0099cc</item>
        <item name="accentColorTranslucent">#660099cc</item>
        <item name="android:colorBackgroundCacheHint">@color/lightest_gray</item>
        <item name="android:windowBackground">@color/lightest_gray</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="Tab" parent="@android:style/Widget">
        <item name="android:background">@drawable/tab_indicator_vpi_nocolor</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/bg_actionbar</item>
    </style>

    <style name="Card">
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="CardList">
        <item name="android:padding">@dimen/padding_1</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/padding_0</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="SidebarText" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/sidebar_text_size</item>
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:shadowColor">@color/sidebar_text_shadow_color</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="Widget.ProgressBar.PullToRefresh" parent="SmoothProgressBar">
        <item name="android:minHeight">@dimen/ptr_progress_bar_stroke_width</item>
    </style>
</resources>